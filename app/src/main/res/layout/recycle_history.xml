<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="340px">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="403dp"
        android:layout_height="125dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/bghistory" />

    <ImageView
        android:id="@+id/rvImageXray"
        android:layout_width="71dp"
        android:layout_height="82dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:layout_constraintVertical_bias="0.441"
        app:srcCompat="@drawable/icon_gambar_scan_pasien" />

    <TextView
        android:id="@+id/rvTvTanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="14dp"
        android:text="Tanggal"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/rvImageXray"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

    <TextView
        android:id="@+id/rvTvNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:text="Nama"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/rvImageXray"
        app:layout_constraintTop_toBottomOf="@+id/rvTvTanggal" />

    <TextView
        android:id="@+id/rvTvSeverity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:text="Tingkat keparahan :"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/rvImageXray"
        app:layout_constraintTop_toBottomOf="@+id/rvTvNama" />

</androidx.constraintlayout.widget.ConstraintLayout>